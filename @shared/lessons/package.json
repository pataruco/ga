{
  "name": "@shared/lessons",
  "version": "0.0.0",
  "description": "All markdown lessons",
  "author": "Pedro Martin <pataruco@gmail.com>",
  "homepage": "https://github.com/pataruco/ga#readme",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "yarn tsc  --outDir dist",
    "postbuild": "yarn ts-node ./scripts/copy-files.ts",
    "postinstall": "yarn build",
    "prebuild": "yarn destroy-build",
    "prestart": "yarn destroy-build",
    "destroy-build": "rm -rf ./dist",
    "start": "concurrently --kill-others \"yarn watch:compile\" \"yarn watch:copy-files\"",
    "watch:compile": "yarn tsc --watch --outDir dist",
    "watch:copy-files": "yarn ts-node ./scripts/copy-watched-files.ts"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/node": "^17.0.16"
  },
  "types": "./dist/index.d.ts"
}
