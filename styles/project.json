{
  "name": "styles",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "styles/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/styles",
        "main": "styles/src/index.ts",
        "tsConfig": "styles/tsconfig.lib.json",
        "assets": ["styles/*.md", "styles/**/*.scss"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs styles {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["styles/**/*.ts", "styles/package.json"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../coverage/styles"
      }
    }
  },
  "tags": []
}
