{
  "name": "lessons",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lessons/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/lessons",
        "format": ["cjs"],
        "bundle": false,
        "main": "lessons/src/main.ts",
        "tsConfig": "lessons/tsconfig.app.json",
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "lessons:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "lessons:build:development"
        },
        "production": {
          "buildTarget": "lessons:build:production"
        }
      }
    },
    "lint": {
      "command": "pnpm biome check lessons"
    },
    "format": {
      "command": "pnpm biome format lessons"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "lessons/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "copyFewdLessons": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf apps/fewd/public/slides",
          "mkdir -p apps/fewd/public/slides",
          "cp -R lessons/src/lessons/fewd/** apps/fewd/public/slides/"
        ]
      }
    }
  }
}
